<div class="container">
  <div class="row d-flex flex-fow mt-5">
    <% @favourites.each do |watch| %>
      <div class="col-4 pb-5">
        <div class="cards">
          <div class="card-fav">
            <img src="<%= watch.medium.poster %>" />
              <div class="card-fav-infos">
                <h2 class="card-title pt-3"><strong><%= watch.medium.title %></strong></h2>
                <p class="card-text">Rating: <%= watch.medium.rating %></p>
                <p class="card-text"><%= watch.medium.description %></p>

              </div>
          </div>
          </div>

          </div>
    <% end %>
  </div>
</div>

