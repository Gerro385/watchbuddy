<%= link_to cl_image_tag("pictograms/arrow-left-green"), url_for(:back), class: "backbutton position-absolute mt-3 ml-3"%>
<div class="container">
  <div class="row d-flex mt-4">
    <div class="card col-4 align-items-center">
      <div class="card-profile">
      <img class="card-img-top" src="
          <% if @user.photo.blank? %>
            https://clipartart.com/images/login-background-images-clipart-1.jpg
          <% else %>
            <%= cl_image_path @user.photo.key, width: 250, height: 300, crop: :fill%>
          <% end %>
          " alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">About me</h5>
          <p class="card-text"><%= @user.bio %></p>
        </div>
      </div>
    </div>
    <div class="profile-info col-7 justify-content-center align-items-center">
      <div class="name d-flex w-100 justify-content-between mb-3">
      <h1><strong><%= @user.first_name + " " + @user.last_name%></strong></h1>
      </div>

      <h2> Recently watched </h2>
      <div class="row mt-3 mb-3">
        <% if @seen %>
          <% @seen.to_a.last(3).reverse.each do |watch| %>
          <div class="col-3">
          <%= render "profile_card", watch: watch %>
          </div>
          <% end %>
        <% end %>
        <div class="see-more">
          <%= link_to "See more", user_seen_path(@user), class: "btn btn-outline-spacegreen" %>
        </div>
      </div>
      <h2> My favourite movies</h2>
      <div class="row mt-3 mb-3">
        <% if @favourite_movies %>
          <% @favourite_movies.sample(3).each do |watch| %>
          <div class="col-3">
          <%= render "profile_card", watch: watch %>
          </div>
          <% end %>
        <% end %>
        <div class="see-more">
          <%= link_to "See more", user_favourites_path(@user), class: "btn btn-outline-spacegreen" %>
        </div>
      </div>
      <h2> My favourite series</h2>
      <div class="row mt-3">
        <% if @favourite_series %>
          <% @favourite_series.sample(3).each do |watch| %>
          <div class="col-3">
          <%= render "profile_card", watch: watch %>
          </div>
          <% end %>
        <% end %>
        <div class="see-more">
          <%= link_to "See more", user_favourites_path(@user), class: "btn btn-outline-spacegreen" %>
        </div>
      </div>
    </div>
  </div>
</div>


